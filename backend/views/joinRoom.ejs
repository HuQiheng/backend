<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chat Room</title>
  <script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>
</head>
<body>
  <form id="joinRoomForm">
    <input type="text" id="roomCode" placeholder="Enter room code">
    <button type="submit">Join Room</button>
  </form>

  <script>
    const socket = io('http://localhost:3010');

    document.getElementById('joinRoomForm').addEventListener('submit', (e) => {
      e.preventDefault();
      const roomCode = document.getElementById('roomCode').value;
      socket.emit('joinRoom', roomCode);
    });

    socket.on('RoomAccess', (code) => {
      console.log(`You joined the room with code: ${code}`);
    });

    socket.on('playerJoined', (code) => {
      console.log(`A player joined the room with code: ${code}`);
    });

    socket.on('connectedPlayers', (playersList) => {
      console.log(`Connected players: ${playersList.join(', ')}`);
    });

    socket.on('roomJoinError', (code) => {
      console.log(`Could not join the room with code: ${code}`);
    });

    socket.on('nonExistingRoom', (code) => {
      console.log(`Room with code ${code} does not exist`);
    });
  </script>
</body>
</html>
